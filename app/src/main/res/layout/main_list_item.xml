<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_img"
        android:layout_margin="18dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/list_item_tv_name"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/list_item_img"
        android:layout_toRightOf="@+id/list_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_tv_description"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/list_item_img"
        android:layout_toRightOf="@+id/list_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_tv_money"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>