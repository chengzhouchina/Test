<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_shop"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/iv_shop"
        android:layout_toRightOf="@+id/iv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_price_discount"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_sell_num"
        android:text="包邮"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorAccent"
        android:layout_alignBottom="@+id/iv_shop"
        android:layout_toRightOf="@+id/iv_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="已售15263件"
        android:layout_marginLeft="50dp"
        android:layout_alignBottom="@+id/iv_shop"
        android:layout_toRightOf="@+id/tv_sell_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>